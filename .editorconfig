
# see https://github.com/CppCXY/EmmyLuaCodeStyle/blob/master/docs/format_config_EN.md
[*.lua]

indent_style = tab
tab_width = 2
quote_style = double
continuation_indent = 2
max_line_length = 80
table_separator_style = comma
trailing_table_separator = smart
call_arg_parentheses = always
insert_final_newline = true
align_function_params = false
align_continuous_assign_statement = false
align_continuous_rect_table_field = false

# The following configuration supports four expressions
# keep  
# fixed(n)   
# min(n)
# max(n)
# for eg. min(2)

line_space_after_if_statement = fixed(2)
line_space_after_for_statement = fixed(2)
line_space_after_local_or_assign_statement = max(2)
line_space_around_block = fixed(1)
break_all_list_when_line_exceed = true
auto_collapse_lines = true
end_statement_with_semicolon = never