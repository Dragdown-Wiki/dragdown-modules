{
	"Lua.diagnostics.globals": ["mw"],
	"Lua.codeLens.enable": true,
	"Lua.runtime.version": "Lua 5.1",
	"Lua.completion.autoRequire": true,
	"Lua.completion.requireSeparator": ".",
	"editor.formatOnSave": false, // dont auto format for now,
	"lua.debug.settings.luaVersion": "lua51",
	"Lua.hint.paramName": "Literal",
	"Lua.type.checkTableShape": true,
	"Lua.workspace.ignoreDir": [".vscode", "node_modules"],
	"Lua.workspace.library": [
		"/config/.luarocks/share/lua/5.1/",
		"${addons}/luassert/module/library",
		"${3rd}/lfs/library",
		"${addons}/penlight/module/library",
		"${addons}/busted/module/library",
		"${3rd}/luassert/library"
	],
	"Lua.workspace.checkThirdParty": false,
	"search.useIgnoreFiles": false,
	"Lua.diagnostics.disable": ["trailing-space"],
	"Lua.diagnostics.neededFileStatus": {
		"codestyle-check": "Any",
		"no-unknown": "Any",
		"global-element": "Any",
		"incomplete-signature-doc": "Any",
		"missing-global-doc": "Any",
		"missing-local-export-doc": "Any",
		"name-style-check": "Any"
	},
	"Lua.nameStyle.config": {
		"local_name_style": "camel_case",
		"function_param_name_style": "camel_case",
		"function_name_style": "camel_case",
		"local_function_name_style": "camel_case",
		"table_field_name_style": "camel_case",
		"global_variable_name_style": "camel_case",
		"module_name_style": "camel_case",
		"require_module_name_style": ["camel_case", "pascal_case"],
		"class_name_style": "camel_case",
		"const_variable_name_style": "camel_case"
	},
	"editor.detectIndentation": false
}
